{
  "name": "@adonisjs/http-server",
  "version": "7.7.0",
  "description": "AdonisJS HTTP server with support packed with Routing and Cookies",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types/main.js",
    "./factories": "./build/factories/main.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_DEBUG=adonisjs:http c8 npm run quick:test",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "prebenchmark": "npm run build",
    "benchmark": "node benchmarks/index.js",
    "release": "release-it",
    "version": "npm run build",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "lint": "eslint",
    "quick:test": "node --import=ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "citgm": "cross-env FORCE_COLOR=0 node --loader=ts-node/esm bin/test.ts"
  },
  "keywords": [
    "http",
    "http-server"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/application": "^8.4.1",
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/encryption": "^6.0.2",
    "@adonisjs/eslint-config": "^2.1.0",
    "@adonisjs/events": "^9.0.2",
    "@adonisjs/fold": "^10.2.0",
    "@adonisjs/logger": "^6.0.6",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@fastify/middie": "^9.0.3",
    "@japa/assert": "^4.0.1",
    "@japa/expect-type": "^2.0.3",
    "@japa/runner": "^4.2.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "1.10.7",
    "@types/accepts": "^1.3.7",
    "@types/content-disposition": "^0.5.9",
    "@types/destroy": "^1.0.3",
    "@types/encodeurl": "^1.0.3",
    "@types/etag": "^1.8.4",
    "@types/fresh": "^0.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.0.3",
    "@types/on-finished": "^2.3.5",
    "@types/pem": "^1.14.4",
    "@types/proxy-addr": "^2.0.3",
    "@types/qs": "^6.14.0",
    "@types/supertest": "^6.0.3",
    "@types/type-is": "^1.6.7",
    "@types/vary": "^1.1.3",
    "@vinejs/vine": "^3.0.1",
    "autocannon": "^8.0.0",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "fastify": "^5.4.0",
    "fs-extra": "^11.3.0",
    "get-port": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "pem": "^1.14.8",
    "prettier": "^3.5.3",
    "reflect-metadata": "^0.2.2",
    "release-it": "^19.0.3",
    "supertest": "^7.1.1",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@poppinss/macroable": "^1.0.4",
    "@poppinss/matchit": "^3.1.2",
    "@poppinss/middleware": "^3.2.5",
    "@poppinss/utils": "^6.10.0",
    "@sindresorhus/is": "^7.0.2",
    "accepts": "^1.3.8",
    "content-disposition": "^0.5.4",
    "cookie": "^1.0.2",
    "destroy": "^1.2.0",
    "encodeurl": "^2.0.0",
    "etag": "^1.8.1",
    "fresh": "^0.5.2",
    "mime-types": "^3.0.1",
    "on-finished": "^2.4.1",
    "proxy-addr": "^2.0.7",
    "qs": "^6.14.0",
    "tmp-cache": "^1.1.0",
    "type-is": "^2.0.1",
    "vary": "^1.1.2",
    "youch": "^3.3.4"
  },
  "peerDependencies": {
    "@adonisjs/application": "^8.0.2",
    "@adonisjs/encryption": "^6.0.0",
    "@adonisjs/events": "^9.0.0",
    "@adonisjs/fold": "^10.0.1",
    "@adonisjs/logger": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/http-server.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/http-server/issues"
  },
  "homepage": "https://github.com/adonisjs/http-server#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "factories/**",
      ".yalc/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config",
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types/main.ts",
      "./factories/main.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  }
}
