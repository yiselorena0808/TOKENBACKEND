{
  "name": "@poppinss/utils",
  "version": "7.0.0-next.3",
  "description": "Handy utilities for repetitive work",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/tests",
    "!build/bin",
    "lodash"
  ],
  "exports": {
    ".": "./build/index.js",
    "./lodash": {
      "types": "./lodash/lodash.types.d.ts",
      "node": "./build/lodash/main.cjs",
      "default": "./build/lodash/main.cjs"
    },
    "./fs": "./build/modules/fs/main.js",
    "./json": "./build/modules/json/main.js",
    "./string": "./build/modules/string/main.js",
    "./string_builder": "./build/modules/string/string_builder.js",
    "./assert": "./build/modules/assert.js",
    "./base64": "./build/modules/base64.js",
    "./exception": "./build/modules/exception.js",
    "./types": "./build/modules/types.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run build:lodash && npm run quick:test",
    "build:lodash": "lodash include=\"pick,omit,has,get,set,unset,mergeWith,merge,size,clone,cloneWith,cloneDeep,cloneDeepWith,toPath\" --production && move-file ./lodash.custom.min.js build/lodash/main.cjs",
    "lint": "eslint",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile && npm run build:lodash",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "quick:test": "node --import=@poppinss/ts-exec bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^3.0.0-next.0",
    "@adonisjs/logger": "^6.0.6",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^2.0.0-next.0",
    "@japa/assert": "^4.0.1",
    "@japa/expect-type": "^2.0.3",
    "@japa/runner": "^4.2.0",
    "@poppinss/ts-exec": "^1.4.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.3",
    "c8": "^10.1.3",
    "eslint": "^9.29.0",
    "fs-extra": "^11.3.0",
    "lodash": "^4.17.21",
    "lodash-cli": "^4.17.5",
    "move-file-cli": "^3.0.0",
    "prettier": "^3.5.3",
    "release-it": "^19.0.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@poppinss/exception": "^1.2.1",
    "@poppinss/object-builder": "^1.1.0",
    "@poppinss/string": "^1.6.0",
    "@poppinss/types": "^1.1.0",
    "flattie": "^1.1.1",
    "safe-stable-stringify": "^2.5.0",
    "secure-json-parse": "^4.0.0"
  },
  "homepage": "https://github.com/poppinss/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/utils.git"
  },
  "bugs": {
    "url": "https://github.com/poppinss/utils/issues"
  },
  "keywords": [
    "toolkit",
    "utilities"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./modules/fs/main.ts",
      "./modules/json/main.ts",
      "./modules/string/main.ts",
      "./modules/string/string_builder.ts",
      "./modules/assert.ts",
      "./modules/base64.ts",
      "./modules/exception.ts",
      "./modules/types.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "**/build/lodash/**",
      "tests/**",
      "test_helpers/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
